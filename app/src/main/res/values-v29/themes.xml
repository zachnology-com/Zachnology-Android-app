<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Zachnology" parent="Base.Theme.Zachnology">
        <!-- Transparent system bars for edge-to-edge. -->
        <item name="android:navigationBarColor">@color/md_theme_light_sys_nav</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:statusBarColor">@color/md_theme_light_primary</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
    <style name="Theme.Zachnology.NoNavigationBar" parent="Theme.Zachnology">
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>
    <style name="Theme.Zachnology.NoNavigationActionBar" parent="Theme.Zachnology">
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
</resources>